<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CadastroeventoActivity"
    tools:showIn="@layout/cadastroevento">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/nome_do_evento"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNomeEvento"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:autofillHints="@string/nome_do_evento"
        android:background="@color/com_facebook_button_background_color_focused"
        android:ems="10"
        android:hint="@string/nome_do_evento"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="LabelFor,UnusedAttribute" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/tipo_de_evento"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtNomeEvento"
        app:layout_constraintStart_toStartOf="@+id/txtNomeEvento"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeEvento" />

    <EditText
        android:id="@+id/txtTipoEvento"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/com_facebook_button_background_color_focused"
        android:ems="10"
        android:hint="@string/tipo_de_evento"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="Autofill,LabelFor" />

    <EditText
        android:id="@+id/txtDataEvento"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/com_facebook_button_background_color_focused"
        android:ems="10"
        android:hint="@string/date_event"
        android:inputType="datetime"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/data_do_evento"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtTipoEvento"
        app:layout_constraintStart_toStartOf="@+id/txtTipoEvento"
        app:layout_constraintTop_toBottomOf="@+id/txtTipoEvento" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/atracao_principal"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtDataEvento"
        app:layout_constraintStart_toStartOf="@+id/txtDataEvento"
        app:layout_constraintTop_toBottomOf="@+id/txtDataEvento" />

    <EditText
        android:id="@+id/txtAtracaoPrincipal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:autofillHints="@string/atracao_principal"
        android:background="@color/com_facebook_button_background_color_focused"
        android:ems="10"
        android:hint="@string/atracao_principal"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="UnusedAttribute" />

    <Button
        android:id="@+id/btnCarregarImg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/google_buttons"
        android:text="Carregar imagem"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textColorHint="@color/com_facebook_button_background_color_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAtracaoPrincipal" />

    <Button
        android:id="@+id/btnCadastrarEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="@string/cadastrar"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textColorHint="@color/com_facebook_button_background_color_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtAtracaoPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/btnCarregarImg" />

    <Button
        android:id="@+id/btnCancelarEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="@string/cancelar"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textColorHint="@color/com_facebook_button_background_color_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtAtracaoPrincipal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/btnCarregarImg" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCancelarEvent" />


</android.support.constraint.ConstraintLayout>